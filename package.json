{
  "name": "just-node",
  "version": "0.1.0",
  "description": "Node.js in your browser. Just like that.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "node",
    "browser",
    "runtime",
    "virtual-filesystem",
    "sandbox",
    "vite",
    "nextjs",
    "hmr",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/user/just-node.git"
  },
  "homepage": "https://github.com/user/just-node#readme",
  "bugs": {
    "url": "https://github.com/user/just-node/issues"
  },
  "author": "",
  "main": "src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "sandbox": "vite --port 3002 --config vite.sandbox.config.js",
    "sandbox:demo": "echo 'Run in two terminals:\\n  Terminal 1: npm run sandbox (serves sandbox on port 3002)\\n  Terminal 2: npm run dev (serves main app on port 5173)\\nThen open: http://localhost:5173/examples/sandbox-next-demo.html'"
  },
  "dependencies": {
    "brotli": "^1.3.3",
    "brotli-wasm": "^3.0.1",
    "comlink": "^4.4.2",
    "just-bash": "^2.7.0",
    "pako": "^2.1.0",
    "resolve.exports": "^2.0.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.0.10",
    "@types/pako": "^2.0.4",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vite": "^5.4.0",
    "vitest": "^4.0.18"
  }
}